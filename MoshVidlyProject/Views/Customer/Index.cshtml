@model IEnumerable<MoshVidlyProject.Models.Customer>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Details")
</p>
<table class="table" id="customers">
    <thead>


        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberShipType.DiscountRate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        var p = $.noConflict();

        p(document).ready(function () {
            var dataTable = p("#customers");
            dataTable.DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/customer/edit/'" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link delete-link' data-customer-id=" + data + ">" + "Delete" + "</button>";
                            //here data= customer.id/ that is data:"id"
                        }
                    }
                ]
            });


            p("#customers").on("click", ".delete-link",
                function () {
                    var button = p(this);
                    bootbox.confirm({
                        size: "small",
                        message: "Are You Sure  to delete customer account!",
                        callback: function (result) {
                            if (result) {
                                p.ajax({
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function () {
                                        // confirm("delete success ");
                                        button.parents("tr").remove();
                                    }
                                });
                            }

                        }
                    });

                });
        });

    </script>
}
