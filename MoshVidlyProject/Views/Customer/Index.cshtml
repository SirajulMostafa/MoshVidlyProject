@model IEnumerable<MoshVidlyProject.Models.Customer>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Details")
</p>
<table class="table" id="customers">
    <thead>


        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberShipType.DiscountRate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>@item.MemberShipType.DiscountRate</td>
                <td>

                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Create", "Save")*@
                    <button data-customer-id="@item.Id" class="btn btn-link delete-link">Delete</button>


                </td>


            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script>
        var p = $.noConflict(); 
        
        p(document).ready(function () {
            var dataTable = p("#customers");
            dataTable.DataTable();
            p("#customers").on("click",".delete-link",
                function() {
                    var button = p(this);
                    bootbox.confirm({
                        size: "small",
                        message: "Are You Sure  to delete customer account!",
                        callback: function(result) {
                            if (result) {
                                p.ajax({
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function() {
                                        // confirm("delete success ");
                                        button.parents("tr").remove();
                                    }
                                });
                            }

                        }
                    });

                });
        });

    </script>
}
