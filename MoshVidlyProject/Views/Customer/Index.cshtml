@model IEnumerable<MoshVidlyProject.Models.Customer>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Details")
</p>
<table class="table" id="customers">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberShipType.DiscountRate)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>@item.MemberShipType.DiscountRate</td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Create", "Save")
                <button data-customer-id="@item.Id" class="btn btn-link delete-link">Delete</button>


            </td>
            

        </tr>
    }

</table>
@section scripts
{
    <script>
        $(document).ready(function() {
            $("#customers").on("click",".delete-link",
                function() {
                    var button = $(this);
                    bootbox.confirm({
                        size: "small",
                        message: "Are You Sure  to delete customer account!",
                        callback: function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function() {
                                        // confirm("delete success ");
                                        button.parents("tr").remove();
                                    }
                                });
                            }

                        }
                    });

                });
        });

    </script>
}
